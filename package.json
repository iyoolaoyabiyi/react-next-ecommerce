    "convex": "^1.28.2",
    "framer-motion": "^4",
    "next": "10.x",
    "node-fetch": "^2.6.12",
    "nodemailer": "^6.9.13",
    "react": "17.x",
    "react-dom": "17.x",
    "react-hook-form": "7.43.9",
    "react-intersection-observer": "^8.32.0",
    "react-redux": "^7.2.4",
